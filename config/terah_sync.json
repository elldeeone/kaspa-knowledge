{
  "output_dir": "../terah/docs",
  "sources": {
    "discourse": {
      "enabled": true,
      "categories": ["l1-l2"],
      "forums": ["research.kas.pa"],
      "sync_mode": "incremental",
      "use_category_only_strategy": true
    },
    "github": {
      "enabled": true,
      "repos": ["kaspanet/rusty-kaspa", "kaspanet/kips"],
      "sync_mode": "incremental"
    },
    "telegram": {
      "enabled": false,
      "groups": ["all"],
      "sync_mode": "incremental"
    },
    "medium": {
      "enabled": true,
      "authors": ["all"],
      "sync_mode": "incremental"
    }
  },
  "sync_interval_days": 1,
  "full_history_on_first_run": true
}